<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Apartments">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Apartments"
        android:textSize="38dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/apartmentList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/apartmentList1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkboxApartment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="171dp"
                    android:layout_height="158dp"
                    app:srcCompat="@drawable/apartment1" />

                <TextView
                    android:id="@+id/apt1Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Apartment 1 \n\n7 Jackes Avenue\nToronto, ON"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/aprt1Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="$2210"
                    android:textColor="@color/blue"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/apartmentList2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkboxApartment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="171dp"
                    android:layout_height="158dp"
                    app:srcCompat="@drawable/apartment2" />

                <TextView
                    android:id="@+id/apt2Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Apartment 2 \n\n7131 Mill Street\nToronto, ON"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/aprt2Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="$3750"
                    android:textColor="@color/blue"
                    android:textSize="24dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/apartmentList3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkboxApartment3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="171dp"
                    android:layout_height="158dp"
                    app:srcCompat="@drawable/apartment3" />

                <TextView
                    android:id="@+id/apt3Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Apartment 3 \n\n118 Balliol Street\nToronto, ON"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/aprt3Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="$2400"
                    android:textColor="@color/blue"
                    android:textSize="24dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/apartmentList4"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkboxApartment4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="171dp"
                    android:layout_height="158dp"
                    app:srcCompat="@drawable/apartment4" />

                <TextView
                    android:id="@+id/apt4Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Apartment 4 \n\n50 Alexander Street\nToronto, ON"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/aprt4Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="2075"
                    android:textColor="@color/blue"
                    android:textSize="24dp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="CHECKOUT" />
</LinearLayout>