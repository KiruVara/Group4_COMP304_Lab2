<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TownHouse">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Town Houses"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/townList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/townList1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkboxtTown1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="171dp"
                    android:layout_height="158dp"
                    app:srcCompat="@drawable/town1" />

                <TextView
                    android:id="@+id/detached1Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Town House 1 \n\n19 Eby Way\nMarkham, ON"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/detached1Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="$3030"
                    android:textColor="@color/blue"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/townList2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkboxTown2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="171dp"
                    android:layout_height="158dp"
                    app:srcCompat="@drawable/town2" />

                <TextView
                    android:id="@+id/town2Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Town House 2 \n\n80 Pond Drive\nMarkham, ON"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/town2Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="$3600"
                    android:textColor="@color/blue"
                    android:textSize="24dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/townList3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkboxTown3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="171dp"
                    android:layout_height="158dp"
                    app:srcCompat="@drawable/town3" />

                <TextView
                    android:id="@+id/detached3Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Town House 3 \n\n60 David Street\nToronto, ON"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/town3Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="$4200"
                    android:textColor="@color/blue"
                    android:textSize="24dp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="CHECKOUT"
        android:onClick="checkout"/>
</LinearLayout>